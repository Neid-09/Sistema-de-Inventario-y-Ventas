<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Priority?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.novaSup.InventoryGest.presentation.controller.ModuloClientes.GestionClientesController">
   <top>
      <VBox spacing="10.0" BorderPane.alignment="CENTER" style="-fx-background-color: #f4f4f4;">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <Label text="Gestión de Clientes" textFill="#083671">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <TextField fx:id="searchField" promptText="Buscar por nombre, correo o cédula..." HBox.hgrow="ALWAYS" style="-fx-border-color: #cccccc; -fx-background-color: white;" />
                  <Label text="Filtrar por Estado:" textFill="#333333" />
                  <ComboBox fx:id="statusFilterCombo" prefWidth="150.0" promptText="Todos" style="-fx-border-color: #cccccc; -fx-background-color: white;" />
               </children>
            </HBox>
         </children>
      </VBox>
   </top>
   <center>
      <TableView fx:id="clientesTable" style="-fx-selection-bar: #BDD7F0; -fx-selection-bar-non-focused: #E0E0E0;" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="nombreCol" prefWidth="150.0" text="Nombre" />
          <TableColumn fx:id="correoCol" prefWidth="180.0" text="Correo" />
            <TableColumn fx:id="cedulaCol" prefWidth="100.0" text="Cédula" />
          <TableColumn fx:id="telefonoCol" prefWidth="100.0" text="Teléfono" />
          <TableColumn fx:id="direccionCol" prefWidth="200.0" text="Dirección" />
          <TableColumn fx:id="totalComprasCol" prefWidth="100.0" text="Total Compras (€)" />
          <TableColumn fx:id="ultimaCompraCol" prefWidth="120.0" text="Última Compra" />
          <TableColumn fx:id="saldoPendienteCol" prefWidth="110.0" text="Saldo Pendiente (€)" />
          <TableColumn fx:id="puntosFidelidadCol" prefWidth="100.0" text="Puntos" />
          <TableColumn fx:id="estadoCol" prefWidth="80.0" text="Estado" />
        </columns>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="5.0" />
         </BorderPane.margin>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
         <VBox.vgrow>ALWAYS</VBox.vgrow> 
      </TableView>
   </center>
   <right>
      <VBox alignment="TOP_CENTER" prefWidth="150.0" spacing="15.0" BorderPane.alignment="CENTER" style="-fx-background-color: #f4f4f4;">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="20.0" />
         </padding>
         <children>
            <Button fx:id="addClienteButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Agregar Cliente" />
            <Button fx:id="editClienteButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Editar Cliente" />
            <Button fx:id="deleteClienteButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" style="-fx-base: #d9534f;" text="Eliminar" />
            <Button fx:id="viewDetailsButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Ver Detalles" />
         </children>
      </VBox>
   </right>
</BorderPane>
