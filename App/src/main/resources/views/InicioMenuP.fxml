<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Separator?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.novaSup.InventoryGest.InventoryGest_Frontend.controllersJFX.inicioMenuPControllerFX">

    <center>
        <VBox alignment="CENTER" spacing="30" style="-fx-background-color: white; -fx-padding: 20;">
            <!-- Título de bienvenida -->
            <Label text="¡Bienvenido al Sistema de Gestión de Inventario!" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #083671;" />

            <!-- Imagen central -->
            <ImageView fitHeight="200.0" fitWidth="200.0" preserveRatio="true">
                <image>
                    <Image url="@../img/menuPrincipal/logoProvicional.jpg" />
                </image>
            </ImageView>

            <Separator prefWidth="500" />

            <!-- Funcionalidades principales -->
            <HBox alignment="CENTER" spacing="40">
                <VBox alignment="CENTER" spacing="10" style="-fx-background-color: #f0f8ff; -fx-padding: 15; -fx-background-radius: 5;">
                    <ImageView fitHeight="60.0" fitWidth="60.0" preserveRatio="true">
                        <image>
                            <Image url="@../img/menuPrincipal/inventario.png" />
                        </image>
                    </ImageView>
                    <Label text="Gestión de Productos" style="-fx-font-weight: bold;" />
                    <Label text="Administra tu catálogo de productos" textAlignment="CENTER" wrapText="true" />
                </VBox>

                <VBox alignment="CENTER" spacing="10" style="-fx-background-color: #f0f8ff; -fx-padding: 15; -fx-background-radius: 5;">
                    <ImageView fitHeight="60.0" fitWidth="60.0" preserveRatio="true">
                        <image>
                            <Image url="@../img/menuPrincipal/entradaSalidas.png" />
                        </image>
                    </ImageView>
                    <Label text="Control de Stock" style="-fx-font-weight: bold;" />
                    <Label text="Registra movimientos de inventario" textAlignment="CENTER" wrapText="true" />
                </VBox>
            </HBox>

            <Label fx:id="lblFecha" text="Fecha actual" style="-fx-font-style: italic;" />
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" style="-fx-padding: 10;">
            <Label text="Seleccione una opción del menú lateral para comenzar" />
        </HBox>
    </bottom>
</BorderPane>