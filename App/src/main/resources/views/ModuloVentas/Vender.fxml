<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.cell.*?>

<VBox spacing="10" style="-fx-background-color: #f8f9fa;" xmlns="http://javafx.com/javafx/23.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.novaSup.InventoryGest.InventoryGest_Frontend.controllersJFX.VenderControllerFX">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10" />
    </padding>

    <!-- Título -->
    <Label text="Procesar Venta" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
    
    <!-- Contenedor principal con división horizontal -->
    <BorderPane VBox.vgrow="ALWAYS">        <!-- Panel izquierdo: Cliente y Vendedor -->
        <left>
            <VBox spacing="10" style="-fx-background-color: white; -fx-border-color: #e0e0e0; -fx-border-radius: 5; -fx-background-radius: 5;">
                <padding>
                    <Insets top="15" right="15" bottom="15" left="15" />
                </padding>
                <VBox.margin>
                    <Insets right="10" />
                </VBox.margin>
                <prefWidth>270</prefWidth>

                <!-- Título de la sección -->
                <Label text="INFORMACIÓN DE VENTA" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
                
                <!-- Vendedor (Automático) -->
                <VBox spacing="5">
                    <Label text="Vendedor" style="-fx-font-size: 14px;" />
                    <TextField fx:id="txtVendedor" editable="false" promptText="Vendedor automático" style="-fx-background-color: #f5f5f5;" />
                </VBox>

                <!-- Cliente (Campo de búsqueda) -->
                <VBox spacing="5">
                    <Label text="Cliente" style="-fx-font-size: 14px;" />
                    <TextField fx:id="txtBuscarCliente" promptText="Buscar cliente por ID, cédula o nombre..." />
                </VBox>

                <!-- Información del cliente y tipo pago -->
                <VBox spacing="10" style="-fx-border-color: #e0e0e0; -fx-border-radius: 5; -fx-padding: 10;">
                    
                    <!-- Checkbox para factura -->
                    <HBox spacing="10">
                        <CheckBox fx:id="chkRequiereFactura" />
                        <Label text="Requiere factura" style="-fx-font-size: 14px;" />
                    </HBox>

                    <!-- Opción de tipo de pago -->
                    <VBox spacing="5">
                        <Label text="Tipo de pago:" style="-fx-font-size: 14px;" />
                        <ComboBox fx:id="cmbTipoPago" prefWidth="220" />
                    </VBox>
                </VBox>
                
                <!-- Espacio en blanco -->
                <Pane VBox.vgrow="ALWAYS" />
                
                <!-- Botón u otros elementos en parte inferior izquierda -->
                <VBox alignment="CENTER">
                    <Button text="Opciones avanzadas" styleClass="btn-secondary" />
                </VBox>
            </VBox>
        </left>
        
        <!-- Panel derecho: Productos y Precios/Botones -->
        <center>
            <VBox spacing="10">
                <!-- Sección superior: Productos -->
                <VBox spacing="10" style="-fx-background-color: white; -fx-border-color: #e0e0e0; -fx-border-radius: 5; -fx-background-radius: 5;" VBox.vgrow="ALWAYS">
                    <padding>
                        <Insets top="15" right="15" bottom="15" left="15" />
                    </padding>
                    
                    <Label text="PRODUCTOS" style="-fx-font-size: 16px; -fx-font-weight: bold;" />

                    <!-- Búsqueda de productos y lista de sugerencias -->
                    <VBox spacing="0">
                        <TextField fx:id="txtBuscarProducto" promptText="Buscar productos por código o nombre..." />
                    </VBox>

                    <!-- Tabla de productos -->
                    <TableView fx:id="tablaProductos" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="colCodigo" text="Código" prefWidth="80">
                                <cellValueFactory>
                                    <PropertyValueFactory property="codigo" />
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn fx:id="colProducto" text="Producto" prefWidth="200">
                                <cellValueFactory>
                                    <PropertyValueFactory property="nombre" />
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn fx:id="colPrecio" text="Precio" prefWidth="100">
                                <cellValueFactory>
                                    <PropertyValueFactory property="precio" />
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn fx:id="colCantidad" text="Cantidad" prefWidth="80">
                                <cellValueFactory>
                                    <PropertyValueFactory property="cantidad" />
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn fx:id="colSubtotal" text="Subtotal" prefWidth="100">
                                <cellValueFactory>
                                    <PropertyValueFactory property="subtotal" />
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn fx:id="colAcciones" text="" prefWidth="60" />
                        </columns>
                        <placeholder>
                            <Label text="No hay productos agregados a la venta" />
                        </placeholder>
                    </TableView>
                    
                    <Label text="No hay productos agregados a la venta" fx:id="lblNotaProductos" style="-fx-font-style: italic;" />
                </VBox>                <!-- Sección inferior: Precios y Botones -->
                <VBox spacing="10" style="-fx-background-color: white; -fx-border-color: #e0e0e0; -fx-border-radius: 5; -fx-background-radius: 5;">
                    <padding>
                        <Insets top="15" right="15" bottom="15" left="15" />
                    </padding>
                    
                    <HBox spacing="20">
                        <!-- Área de precios y totales a la izquierda -->
                        <VBox spacing="5" HBox.hgrow="ALWAYS">
                            <Label text="PRECIOS Y BOTONES" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
                            
                            <GridPane hgap="10" vgap="8">
                                <columnConstraints>
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="120" />
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="100" />
                                </columnConstraints>

                                <Label text="Subtotal:" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-font-size: 14px;" />
                                <Label fx:id="lblSubtotal" text="0.00" GridPane.columnIndex="1" GridPane.rowIndex="0" style="-fx-font-size: 14px; -fx-font-weight: bold;" />

                                <Label text="IVA (16%):" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-font-size: 14px;" />
                                <Label fx:id="lblIVA" text="0.00" GridPane.columnIndex="1" GridPane.rowIndex="1" style="-fx-font-size: 14px; -fx-font-weight: bold;" />

                                <Label text="Total:" GridPane.columnIndex="0" GridPane.rowIndex="2" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
                                <Label fx:id="lblTotal" text="0.00" GridPane.columnIndex="1" GridPane.rowIndex="2" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
                            </GridPane>
                        </VBox>
                        
                        <!-- Botones de acción a la derecha -->
                        <HBox spacing="10" alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
                            <Button fx:id="btnCancelar" text="Cancelar" styleClass="btn-secondary" onAction="#cancelarVenta" />
                            <Button fx:id="btnProcesarVenta" text="Finalizar Venta" styleClass="btn-primary" onAction="#procesarVenta" />
                            <Button fx:id="btnImprimirComprobante" text="Finalizar e Imprimir" styleClass="btn-success" onAction="#finalizarEImprimir" />
                        </HBox>
                    </HBox>
                </VBox>
            </VBox>
        </center>
    </BorderPane>
</VBox>