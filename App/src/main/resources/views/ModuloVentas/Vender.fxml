<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.cell.*?>

<VBox spacing="15" styleClass="root" stylesheets="@../../styles/vender-styles.css" xmlns="http://javafx.com/javafx/23.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.novaSup.InventoryGest.InventoryGest_Frontend.controllersJFX.VenderControllerFX">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>

    <!-- Título -->
    <Label text="Procesar Venta" styleClass="title-label" />
    
    <!-- Contenedor principal con división horizontal -->
    <BorderPane VBox.vgrow="ALWAYS" styleClass="border-pane-main">        <!-- Panel izquierdo: Cliente y Vendedor -->
        <left>
            <VBox spacing="15" styleClass="panel">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20" />
                </padding>
                <VBox.margin>
                    <Insets /> 
                </VBox.margin>
                <prefWidth>300</prefWidth> 

                <!-- Título de la sección -->
                <Label text="INFORMACIÓN DE VENTA" styleClass="section-title" />
                
                <!-- Vendedor (Automático) -->
                <VBox styleClass="vbox-form-section">
                    <Label text="Vendedor" styleClass="form-label" />
                    <TextField fx:id="txtVendedor" editable="false" promptText="Vendedor automático" styleClass="readonly-textfield" />
                </VBox>

                <!-- Cliente (Campo de búsqueda) -->
                <VBox fx:id="vboxCliente" styleClass="vbox-form-section">
                    <Label text="Cliente" styleClass="form-label" />
                    <TextField fx:id="txtBuscarCliente" promptText="Buscar cliente por ID, cédula o nombre..." styleClass="text-field" />
                </VBox>

                <!-- Información del cliente y tipo pago -->
                <VBox spacing="15" styleClass="info-box">
                    
                    <!-- Checkbox para factura -->
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <CheckBox fx:id="chkRequiereFactura" />
                        <Label text="Requiere factura" styleClass="form-label" />
                    </HBox>

                    <!-- Opción de tipo de pago -->
                    <VBox styleClass="vbox-form-section">
                        <Label text="Tipo de pago:" styleClass="form-label" />
                        <ComboBox fx:id="cmbTipoPago" prefWidth="250" styleClass="combo-box"/>
                    </VBox>
                </VBox>
                
                <!-- Espacio en blanco -->
                <Pane VBox.vgrow="ALWAYS" />
                
                <!-- Botón u otros elementos en parte inferior izquierda -->
                <VBox alignment="CENTER">
                    <Button text="Opciones avanzadas" styleClass="btn-secondary" />
                </VBox>
            </VBox>
        </left>
        
        <!-- Panel derecho: Productos y Precios/Botones -->
        <center>
            <VBox spacing="15">
                <!-- Sección superior: Productos -->
                <VBox spacing="15" styleClass="panel" VBox.vgrow="ALWAYS">
                    <padding>
                        <Insets top="20" right="20" bottom="20" left="20" />
                    </padding>
                    
                    <Label text="PRODUCTOS" styleClass="section-title" />

                    <!-- Búsqueda de productos y lista de sugerencias -->
                    <VBox spacing="0">
                        <TextField fx:id="txtBuscarProducto" promptText="Buscar productos por código o nombre..." styleClass="text-field"/>
                    </VBox>

                    <!-- Tabla de productos -->
                    <TableView fx:id="tablaProductos" VBox.vgrow="ALWAYS" styleClass="table-view">
                        <columns>
                            <TableColumn fx:id="colCodigo" text="Código" prefWidth="100">
                            </TableColumn>
                            <TableColumn fx:id="colProducto" text="Producto" prefWidth="220">
                            </TableColumn>
                            <TableColumn fx:id="colPrecio" text="Precio" prefWidth="120">
                            </TableColumn>
                            <TableColumn fx:id="colCantidad" text="Cantidad" prefWidth="100">
                            </TableColumn>
                            <TableColumn fx:id="colSubtotal" text="Subtotal" prefWidth="120">
                            </TableColumn>
                            <TableColumn fx:id="colAcciones" text="Acción" prefWidth="80" />
                        </columns>
                        <placeholder>
                            <Label text="No hay productos agregados a la venta" />
                        </placeholder>
                    </TableView>
                    
                    <Label text="No hay productos agregados a la venta" fx:id="lblNotaProductos" styleClass="italic-note" />
                </VBox>                <!-- Sección inferior: Precios y Botones -->
                <VBox spacing="15" styleClass="panel">
                    <padding>
                        <Insets top="20" right="20" bottom="20" left="20" />
                    </padding>
                    
                    <HBox spacing="20" alignment="CENTER_LEFT">
                        <!-- Área de precios y totales a la izquierda -->
                        <VBox spacing="8" HBox.hgrow="ALWAYS">
                            <Label text="TOTALES" styleClass="section-title" />
                            
                            <GridPane hgap="10" vgap="8">
                                <columnConstraints>
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="120.0" />
                                </columnConstraints>
                                <rowConstraints>
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                </rowConstraints>
                                <children>
                                    <Label text="Subtotal:" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="form-label"/>
                                    <Label fx:id="lblSubtotal" text="\$0.00" GridPane.rowIndex="0" GridPane.columnIndex="1" styleClass="text-bold"/>
                                    
                                    <Label text="IVA (16%):" GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="form-label"/>
                                    <Label fx:id="lblIVA" text="\$0.00" GridPane.rowIndex="1" GridPane.columnIndex="1" styleClass="text-bold"/>
                                    
                                    <Label text="Total:" GridPane.rowIndex="2" GridPane.columnIndex="0" styleClass="form-label-total"/>
                                    <Label fx:id="lblTotal" text="\$0.00" GridPane.rowIndex="2" GridPane.columnIndex="1" styleClass="text-total"/>
                                </children>
                            </GridPane>
                        </VBox>
                        
                        <!-- Botones de acción a la derecha -->
                        <HBox spacing="10" styleClass="hbox-actions" HBox.hgrow="ALWAYS">
                            <Button fx:id="btnCancelar" text="Cancelar" styleClass="btn-secondary" onAction="#cancelarVenta" />
                            <Button fx:id="btnProcesarVenta" text="Finalizar Venta" styleClass="btn-primary" onAction="#procesarVenta" />
                            <Button fx:id="btnImprimirComprobante" text="Finalizar e Imprimir" styleClass="btn-success" onAction="#finalizarEImprimir" />
                        </HBox>
                    </HBox>
                </VBox>
            </VBox>
        </center>
    </BorderPane>
</VBox>