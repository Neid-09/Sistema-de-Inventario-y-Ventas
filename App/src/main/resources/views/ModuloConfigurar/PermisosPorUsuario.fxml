<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.tuapp.controlador.PermisosEspecificosUsuariosController">
    <top>
        <Label text="Permisos Específicos para Usuarios" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    </top>

    <center>
        <VBox spacing="10" alignment="CENTER">
            <HBox spacing="10">
                <Label text="Seleccionar Usuario:"/>
                <ComboBox fx:id="cbUsuarios" prefWidth="200"/>
            </HBox>

            <HBox spacing="10">
                <Label text="Rol Asignado:"/>
                <TextField fx:id="tfRol" editable="false" prefWidth="200"/>
            </HBox>

            <Label text="Permisos del Rol:" style="-fx-font-weight: bold;"/>
            <ListView fx:id="lvPermisosRol" prefHeight="100"/>

            <Label text="Permisos Específicos:" style="-fx-font-weight: bold;"/>
            <VBox fx:id="vboxPermisosEspecificos" spacing="5"/>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="10">
            <Button text="Guardar Cambios" fx:id="btnGuardar"/>
        </HBox>
    </bottom>
</BorderPane>
