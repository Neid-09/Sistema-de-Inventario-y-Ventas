<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.alamacen.controllers.GestionPermisosController">
    <top>
        <Label text="Gestión de Permisos" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    </top>
    <center>
        <VBox spacing="10" alignment="CENTER">
            <TableView fx:id="tablaPermisos">
                <columns>
                    <TableColumn text="ID" fx:id="colId" prefWidth="50"/>
                    <TableColumn text="Nombre" fx:id="colNombre" prefWidth="200"/>
                    <TableColumn text="Descripción" fx:id="colDescripcion" prefWidth="300"/>
                </columns>
            </TableView>
        </VBox>
    </center>
    <bottom>
        <HBox spacing="10" alignment="CENTER">
            <Button text="Agregar" fx:id="btnAgregar"/>
            <Button text="Editar" fx:id="btnEditar"/>
            <Button text="Eliminar" fx:id="btnEliminar"/>
        </HBox>
    </bottom>
</BorderPane>
