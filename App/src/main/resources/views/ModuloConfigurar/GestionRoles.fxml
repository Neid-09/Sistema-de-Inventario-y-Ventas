<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1">
    <!-- Encabezado -->
    <top>
        <Label text="Gestión de Roles" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 10px;"/>
    </top>

    <!-- Centro: Tabla de Roles -->
    <center>
        <TableView fx:id="tablaRoles" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn text="ID" fx:id="colIdRol" prefWidth="100"/>
                <TableColumn text="Nombre del Rol" fx:id="colNombreRol" prefWidth="300"/>
            </columns>
        </TableView>
    </center>

    <!-- Pie de Página: Botones de Acción -->
    <bottom>
        <HBox spacing="10" alignment="CENTER" style="-fx-padding: 10px;">
            <Button text="Agregar" fx:id="btnAgregarRol"/>
            <Button text="Editar" fx:id="btnEditarRol"/>
            <Button text="Eliminar" fx:id="btnEliminarRol"/>
        </HBox>
    </bottom>
</BorderPane>
